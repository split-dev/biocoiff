<div class="forms">
  <div class="container">
    <div class="forms__content">
      <div  class="forms__login">
        <h2 data-aos="fade-down" data-aos-duration="900" data-aos-delay="100">Log In</h2>
        <h3 data-aos="fade-down" data-aos-duration="900" data-aos-delay="100">Enter the plant universe...</h3>
        <div data-aos="zoom-in" data-aos-duration="900" data-aos-delay="100" class="forms__body">
          <form action="">
            <div class="contact__input">
              <label for="">Username or e-mail</label>
              <input placeholder="example" type="email" name="email">
            </div>
            <div class="contact__input">
              <label for="">Password</label>
              <input placeholder="example" type="password">
            </div>
            <p>Forget your password?</p>
            <div class="forms__checkbox">
              <input id="check1" type="checkbox">
              <label for="check1">Remember me</label>
            </div>
            <div data-aos="fade-right" data-aos-duration="900" data-aos-delay="90" class="forms__button">
              <button class="btn-arrow">Log In
                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="34px" height="10px" viewBox="0 0 34 10" version="1.1">
                  <title>Path</title>
                  <g id="desktop" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                    <g id="contact" transform="translate(-949.000000, -865.000000)" fill="#4A3C3A" fill-rule="nonzero">
                      <g id="button" transform="translate(844.000000, 763.000000)">
                        <g id="Group-9" transform="translate(0.000000, 87.000000)">
                          <path id="Path" d="M130.112298,15.0642122 L138.112298,19.5642122 L138.887032,20 L138.112298,20.4357878 L130.112298,24.9357878 L129.622037,24.0642122 L135.959,20.5 L105.367168,20.5 L105.367168,19.5 L135.959,19.5 L129.622037,15.9357878 L130.112298,15.0642122 Z"/>
                        </g>
                      </g>
                    </g>
                  </g>
                </svg>
              </button>
            </div>
          </form>
        </div>
      </div>
      <div class="forms__signup">
        <h2 data-aos="fade-down" data-aos-duration="900" data-aos-delay="100">Sign Up</h2>
        <h3 data-aos="fade-down" data-aos-duration="900" data-aos-delay="100">Enter the plant universe...</h3>
        <div data-aos="zoom-in" data-aos-duration="900" data-aos-delay="100" class="forms__body">
          <form action="">
            <div class="contact__input">
              <label for="">E-mail adress</label>
              <input id="email" placeholder="example@mail.com" type="email" name="email">
            </div>
            <div class="contact__input">
              <label for="">Password</label>
              <input placeholder="example" type="text">
            </div>
            <div class="contact__input">
              <label for="">Last name</label>
              <input placeholder="example" type="text">
            </div>
            <div class="contact__input">
              <label for="">First name</label>
              <input placeholder="example" type="text">
            </div>
            <div class="contact__input">
              <label for="">Phone</label>
              <div class="input-group">
                <span>+33</span>
                <input class="phone" placeholder="0 660 209 333" type="tel">
              </div>
            </div>
            <div class="contact__input">
              <label for="">SIRET</label>
              <input placeholder="example" type="text">
            </div>
            <div class="forms__checkbox">
              <input id="check2" type="checkbox">
              <label for="check2">I am a hairdressing professional</label>
            </div>
            <div data-aos="fade-right" data-aos-duration="900" data-aos-delay="90" class="forms__button">
              <button class="btn-arrow">Sign Up
                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="34px" height="10px" viewBox="0 0 34 10" version="1.1">
                  <title>Path</title>
                  <g id="desktop" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                    <g id="contact" transform="translate(-949.000000, -865.000000)" fill="#4A3C3A" fill-rule="nonzero">
                      <g id="button" transform="translate(844.000000, 763.000000)">
                        <g id="Group-9" transform="translate(0.000000, 87.000000)">
                          <path id="Path" d="M130.112298,15.0642122 L138.112298,19.5642122 L138.887032,20 L138.112298,20.4357878 L130.112298,24.9357878 L129.622037,24.0642122 L135.959,20.5 L105.367168,20.5 L105.367168,19.5 L135.959,19.5 L129.622037,15.9357878 L130.112298,15.0642122 Z"/>
                        </g>
                      </g>
                    </g>
                  </g>
                </svg>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
